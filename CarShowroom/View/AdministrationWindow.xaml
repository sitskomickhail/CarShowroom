<Window x:Class="CarShowroom.View.AdministrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ViewModels="clr-namespace:CarShowroom.ViewModel"
        xmlns:local="clr-namespace:CarShowroom.View"
        mc:Ignorable="d"
        x:Name="AdministratorWindowName"
        Icon="../Images/Icons/automobile.png"
        Title="Showroom-Administrator" Height="650" Width="1200"
        Closing="AdministrationWindow_OnClosing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition Height="0.1*"></RowDefinition>
        </Grid.RowDefinitions>
        <ToolBarTray VerticalAlignment="Top">
            <ToolBar  Height="35" 
                      VerticalAlignment="Top"
                      HorizontalAlignment="Right"
                      MinHeight="35" >
                <ToggleButton Command="{Binding BackToLoginCommand}"
                              CommandParameter="{Binding ElementName=AdministratorWindowName}"
                              HorizontalAlignment="Right"
                              MaxHeight="35">
                    <Image Source="../Images/Icons/cross.png"/>
                </ToggleButton>
            </ToolBar>
        </ToolBarTray>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.2*"></ColumnDefinition>
                <ColumnDefinition Width="0.8*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
        </Grid>
    </Grid>
</Window>