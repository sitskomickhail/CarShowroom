<Window x:Class="CarShowroom.View.AdministrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ViewModels="clr-namespace:CarShowroom.ViewModel"
        xmlns:local="clr-namespace:CarShowroom.View"
        mc:Ignorable="d"
        x:Name="AdministratorWindowName"
        Icon="../Images/Icons/automobile.png"
        Title="Showroom-Administrator" Height="650" Width="1200"
        Closing="AdministrationWindow_OnClosing">
    <Window.Resources>
        <Style x:Key="TreeViewStyle">
            <Setter Property="Control.FontSize" Value="14"/>
            <Setter Property="TreeView.BorderBrush" Value="Black"/>
        </Style>
        <Style x:Key="TreeViewItemBorder">
            <Setter Property="Border.BorderBrush" Value="LightGray"/>
            <Setter Property="Border.BorderThickness" Value="2"/>
            <Setter Property="Border.MinWidth" Value="175"/>
            <Setter Property="Border.CornerRadius" Value="10"/>
            <Setter Property="Border.Background" Value="LightGray"/>
            <Setter Property="Border.Margin" Value="5, 2, 0, 0"/>
        </Style>
        <Style x:Key="TreeViewItemLabel">
            <Setter Property="Label.FontWeight" Value="Bold"/>
        </Style>
        <Style x:Key="TreeViewItemElement">
            <Setter Property="Control.Margin" Value="20, 0, 0, 0"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="35"></RowDefinition>
        </Grid.RowDefinitions>
        <ToolBar Grid.Row="0"
                 Height="35" 
                 VerticalAlignment="Top"
                 MinHeight="35"/>
        <ToolBar Grid.Row="0" HorizontalAlignment="Right"
                 Height="35" 
                 VerticalAlignment="Top"
                 MinHeight="35">
            <Button Command="{Binding BackToLoginCommand}"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Stretch"
                    MaxHeight="35">
                <Image Source="../Images/Icons/cross.png"/>
            </Button>
        </ToolBar>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.23*"></ColumnDefinition>
                <ColumnDefinition Width="0.77*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TreeView Grid.Column="0" 
                      Style="{StaticResource TreeViewStyle}">
                <TreeViewItem>
                    <TreeViewItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="../Images/Icons/bus.png" 
                                       MaxHeight="20"/>
                            <Border Style="{StaticResource TreeViewItemBorder}">
                                <Label Style="{StaticResource TreeViewItemLabel}">Vehicles</Label>
                            </Border>
                        </StackPanel>
                    </TreeViewItem.Header>
                    <TreeViewItem Style="{StaticResource TreeViewItemElement}" Header="➼ Show list of vehicles"/>
                    <TreeViewItem Style="{StaticResource TreeViewItemElement}" Header="➼ Edit vehicles list"/>
                    <TreeViewItem Style="{StaticResource TreeViewItemElement}" Header="➼ Create vehicle"/>
                </TreeViewItem>
                <TreeViewItem>
                    <TreeViewItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="../Images/Icons/key.png" 
                                   MaxHeight="20"/>
                            <Border Style="{StaticResource TreeViewItemBorder}">
                                <Label Style="{StaticResource TreeViewItemLabel}">Users</Label>
                            </Border>
                        </StackPanel>
                    </TreeViewItem.Header>
                    <TreeViewItem Style="{StaticResource TreeViewItemElement}" Header="➼ Show list of users"/>
                    <TreeViewItem Style="{StaticResource TreeViewItemElement}" Header="➼ Edit users list"/>
                    <TreeViewItem Style="{StaticResource TreeViewItemElement}" Header="➼ Create user"/>
                </TreeViewItem>
                <TreeViewItem>
                    <TreeViewItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="../Images/Icons/business.png" 
                                   MaxHeight="20"/>
                            <Border Style="{StaticResource TreeViewItemBorder}">
                                <Label Style="{StaticResource TreeViewItemLabel}">Clients</Label>
                            </Border>
                        </StackPanel>
                    </TreeViewItem.Header>
                    <TreeViewItem Style="{StaticResource TreeViewItemElement}" Header="➼ Show list of clients"/>
                    <TreeViewItem Style="{StaticResource TreeViewItemElement}" Header="➼ Edit clients list"/>
                    <TreeViewItem Style="{StaticResource TreeViewItemElement}" Header="➼ Create client"/>
                </TreeViewItem>
                <TreeViewItem>
                    <TreeViewItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="../Images/Icons/documents.png" 
                                   MaxHeight="20"/>
                            <Border Style="{StaticResource TreeViewItemBorder}">
                                <Label Style="{StaticResource TreeViewItemLabel}"
                                       Content="Sales and Maintenances"></Label>
                            </Border>
                        </StackPanel>
                    </TreeViewItem.Header>
                    <TreeViewItem>
                        <TreeViewItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="../Images/Icons/sales.png" 
                                       MaxHeight="20"/>
                                <Border Style="{StaticResource TreeViewItemBorder}">
                                    <Label Style="{StaticResource TreeViewItemLabel}">Sales</Label>
                                </Border>
                            </StackPanel>
                        </TreeViewItem.Header>
                        <TreeViewItem Style="{StaticResource TreeViewItemElement}" Header="➼ Show list of sales"/>
                        <TreeViewItem Style="{StaticResource TreeViewItemElement}" Header="➼ Create sale"/>
                    </TreeViewItem>
                    <TreeViewItem>
                        <TreeViewItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="../Images/Icons/gear.png" 
                                       MaxHeight="20"/>
                                <Border Style="{StaticResource TreeViewItemBorder}">
                                    <Label Style="{StaticResource TreeViewItemLabel}">Maintenances</Label>
                                </Border>
                            </StackPanel>
                        </TreeViewItem.Header>
                        <TreeViewItem Style="{StaticResource TreeViewItemElement}" Header="➼ Show list of maintenances"/>
                        <TreeViewItem Style="{StaticResource TreeViewItemElement}" Header="➼ Edit maintenances list"/>
                        <TreeViewItem Style="{StaticResource TreeViewItemElement}" Header="➼ Create maintenance"/>
                    </TreeViewItem>
                </TreeViewItem>
            </TreeView>
        </Grid>
        <StatusBar Grid.Row="2">
            <Label FontSize="12">Status:</Label>
            <!--<Label FontSize="12" Content="{Binding Path=Status, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"></Label>-->
        </StatusBar>
    </Grid>
</Window>